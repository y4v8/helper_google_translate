{
  "manifest_version": 2,
  "name": "A helper for Google Translate",
  "version": "2.1.2",
  "description": "Translation of selected text by pressing the CTRL key.",
  "homepage_url": "https://github.com/y4v8/helper_google_translate",

  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],

  "options_ui": {
    "page": "options.html"
  },

  "applications": {
    "gecko": {
      "id": "{e2652cfc-37d0-4d74-a4f7-a56812392073}"
    }
  }
}
